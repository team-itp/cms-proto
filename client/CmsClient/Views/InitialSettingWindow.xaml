<Window
    x:Class="CmsClient.Views.InitialSettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CmsClient.Views"
    xmlns:vm="clr-namespace:CmsClient.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="InitialWindow"
    Width="480"
    Height="300"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <local:LoginView Width="400"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SelectWatchDirectoryViewModel}">
            <local:SelectWatchDirectoryView Width="400"/>
        </DataTemplate>
    </Window.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <ContentControl Content="{Binding CurrentView}" />
    </Grid>
</Window>
