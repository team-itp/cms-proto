<UserControl
    x:Class="CmsClient.Views.MediaFileListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CmsClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer>
        <local:FlowControl
            x:Name="flow"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            ItemsSource="{Binding Files}"
            SelectionChanged="flow_SelectionChanged">
            <local:FlowControl.ItemTemplate>
                <DataTemplate>
                    <local:MediaFileView Width="{Binding ElementName=flow, Path=ActualWidth}" Height="280" />
                </DataTemplate>
            </local:FlowControl.ItemTemplate>
        </local:FlowControl>
    </ScrollViewer>
</UserControl>
